---
import { LOGO_IMAGE, SITE } from "@config";
import LinkButton from "./LinkButton.astro";

export interface Props {
  activeNav?: "about" | "posts" | "tags" | "search";
}

const { activeNav } = Astro.props;
---

<header class="header-shell">
  <a id="skip-to-content" href="#main-content">Skip to content</a>
  <div class="nav-container">
    <div class="top-nav-wrap">
      <a href="/" class="logo whitespace-nowrap">
        {
          LOGO_IMAGE.enable ? (
            <img
              src={`/assets/${LOGO_IMAGE.svg ? "logo.svg" : "logo.png"}`}
              alt={SITE.title}
              width={LOGO_IMAGE.width}
              height={LOGO_IMAGE.height}
            />
          ) : (
            SITE.title
          )
        }
      </a>
      <!---toggle on or off text header -->
      <a
        style="text-transform: uppercase; margin-left:1%"
        href="/"
        class="logo whitespace-nowrap"
      >
        Art Resources & Tutorials
      </a>

      <nav id="nav-menu">
        <button
          class="hamburger-menu focus-outline"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="menu-icon"
          >
            <line x1="7" y1="12" x2="21" y2="12" class="line"></line>
            <line x1="3" y1="6" x2="21" y2="6" class="line"></line>
            <line x1="12" y1="18" x2="21" y2="18" class="line"></line>
            <line x1="18" y1="6" x2="6" y2="18" class="close"></line>
            <line x1="6" y1="6" x2="18" y2="18" class="close"></line>
          </svg>
        </button>
        <ul id="menu-items" class="display-none sm:flex">
          <li>
            <a href="/about/" class={activeNav === "about" ? "active" : ""}>
              About
            </a>
          </li>
          <li>
            <a href="/posts/" class={activeNav === "posts" ? "active" : ""}>
              Posts
            </a>
          </li>
          <li>
            <a href="/tags/" class={activeNav === "tags" ? "active" : ""}>
              Topics
            </a>
          </li>
          <li>
            <a class="activeNav" href="https://artres.xyz/artist-index/">
              Community
            </a>
          </li>
          <li>
            <a class="activeNav" href="https://mailchi.mp/a190fe0b4975/art-res">
              Newsletter
            </a>
          </li>
          <li class="tools-nav">
            <details>
              <summary aria-haspopup="true" aria-expanded="false">
                Tools
              </summary>
              <div class="tools-submenu">
                <a
                  href="https://fairpaycalc.artres.xyz/"
                  rel="noreferrer"
                  target="_blank"
                >
                  Fair Pay Calculator
                </a>
                <a
                  href="https://artres.xyz/ideas"
                  rel="noreferrer"
                  target="_blank"
                >
                  Idea Generator
                </a>
              </div>
            </details>
          </li>

          <li>
            <LinkButton
              href="/search/"
              className={`focus-outline p-3 sm:p-1 ${
                activeNav === "search" ? "active" : ""
              } flex`}
              ariaLabel="search"
              title="Search"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="scale-125 sm:scale-100"
                ><path
                  d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
                ></path>
              </svg>
              <span class="sr-only">Search</span>
            </LinkButton>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li>
                <button
                  id="theme-btn"
                  class="focus-outline"
                  title="Toggles light & dark"
                  aria-label="auto"
                  aria-live="polite"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" id="moon-svg">
                    <path d="M20.742 13.045a8.088 8.088 0 0 1-2.077.271c-2.135 0-4.14-.83-5.646-2.336a8.025 8.025 0 0 1-2.064-7.723A1 1 0 0 0 9.73 2.034a10.014 10.014 0 0 0-4.489 2.582c-3.898 3.898-3.898 10.243 0 14.143a9.937 9.937 0 0 0 7.072 2.93 9.93 9.93 0 0 0 7.07-2.929 10.007 10.007 0 0 0 2.583-4.491 1.001 1.001 0 0 0-1.224-1.224zm-2.772 4.301a7.947 7.947 0 0 1-5.656 2.343 7.953 7.953 0 0 1-5.658-2.344c-3.118-3.119-3.118-8.195 0-11.314a7.923 7.923 0 0 1 2.06-1.483 10.027 10.027 0 0 0 2.89 7.848 9.972 9.972 0 0 0 7.848 2.891 8.036 8.036 0 0 1-1.484 2.059z" />
                  </svg>
                  <svg xmlns="http://www.w3.org/2000/svg" id="sun-svg">
                    <path d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z" />
                  </svg>
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>
</header>

<style>
  @reference "tailwindcss";
  header {
    @apply sticky top-0 z-30 transition duration-500;
    background: rgba(255, 255, 255, 0.75);
    backdrop-filter: blur(16px);
    border-bottom: 1px solid rgba(189, 173, 255, 0.25);
    box-shadow: 0 2px 12px -16px rgba(28, 22, 60, 0.45);
    padding: 0.2rem 0;
  }
  #skip-to-content {
    @apply absolute -top-full left-16 z-50 bg-skin-accent px-2 py-2 text-skin-inverted transition-all focus:top-4;
  }
  .nav-container {
    @apply mx-auto flex max-w-5xl flex-col items-center justify-between sm:flex-row;
  }
  .top-nav-wrap {
    @apply relative flex w-full items-center justify-between px-3 py-2 sm:px-0 sm:py-2;
  }
  .logo {
    @apply absolute py-1 text-xl font-semibold tracking-tight text-slate-900 transition duration-300 hover:text-skin-accent sm:static sm:text-2xl;
  }
  .logo img {
    @apply drop-shadow-lg;
  }
  .hamburger-menu {
    @apply self-end p-2 sm:hidden;
  }
  .hamburger-menu svg {
    height: 1.5rem;
    width: 1.5rem;
    @apply scale-125 fill-skin-base;
  }

  nav {
    @apply flex w-full flex-col items-center sm:ml-2 sm:flex-row sm:items-center sm:justify-end sm:space-x-4 sm:py-0;
  }
  nav ul {
    @apply mt-4 grid w-full grid-cols-2 gap-2 sm:mt-0 sm:w-auto sm:flex sm:items-center sm:gap-2;
  }
  nav ul li {
    @apply flex items-center justify-center;
  }
  nav ul li a {
    @apply relative w-full px-3 py-2 uppercase text-center font-semibold text-base text-slate-900 transition duration-300;
    border-radius: 0;
    background: transparent;
  }
  nav ul li a::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 0;
    background: rgba(229, 216, 255, 0.75);
    opacity: 0;
    transition:
      opacity 0.25s ease,
      transform 0.25s ease;
    transform: translateY(2px);
    z-index: -1;
  }
  nav ul li a:hover,
  nav ul li a:focus-visible {
    color: #1f1b2d;
    transform: translateY(-1px);
  }
  nav ul li a:hover::after,
  nav ul li a:focus-visible::after {
    opacity: 1;
    transform: translateY(0);
  }
  nav ul li:nth-last-child(2) a {
    @apply w-auto;
  }
  nav ul li:nth-last-child(1),
  nav ul li:nth-last-child(2) {
    @apply col-span-1;
  }
  nav a.active {
    @apply underline decoration-wavy decoration-2 underline-offset-4;
  }
  nav a.active svg {
    @apply fill-skin-accent;
  }

  .tools-nav {
    position: relative;
  }
  .tools-nav details {
    position: relative;
  }
  .tools-nav summary {
    cursor: pointer;
    font-weight: 600;
    @apply relative px-3 py-2 uppercase text-center font-semibold text-base text-slate-900 transition duration-300;
    background: transparent;
  }
  .tools-nav summary::marker {
    font-size: 0.7em;
    margin: 1%;
  }
  .tools-submenu {
    position: absolute;
    top: 110%;
    left: 0;
    background: #ffffff;
    border-radius: 0.25rem;
    border: 1px solid rgba(0, 0, 0, 0.15);
    padding: 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    box-shadow: 0 10px 30px -20px rgba(0, 0, 0, 0.25);
    min-width: 180px;
    z-index: 20;
  }
  .tools-submenu a {
    text-transform: none;
    color: #1f1b2d;
    font-weight: 500;
    padding: 0.25rem 0.5rem;
    border-radius: 0.2rem;
  }
  .tools-submenu a:hover,
  .tools-submenu a:focus-visible {
    background: rgba(31, 27, 45, 0.08);
  }

  nav button {
    @apply p-1;
  }
  nav button svg {
    height: 1.5rem;
    width: 1.5rem;
    @apply fill-skin-base transition duration-300 ease-out hover:fill-skin-accent;
  }
  #theme-btn {
    @apply p-3 sm:p-1 transition duration-300;
  }
  #theme-btn svg {
    @apply scale-125 transition duration-500 ease-out sm:scale-100;
  }

  .menu-icon line {
    @apply transition-opacity duration-75 ease-in-out;
  }
  .menu-icon .close {
    opacity: 0;
  }
  .menu-icon.is-active .line {
    @apply opacity-0;
  }
  .menu-icon.is-active .close {
    @apply opacity-100;
  }
</style>

<script>
  function toggleNav() {
    // Toggle menu
    const menuBtn = document.querySelector(".hamburger-menu");
    const menuIcon = document.querySelector(".menu-icon");
    const menuItems = document.querySelector("#menu-items");

    menuBtn?.addEventListener("click", () => {
      const menuExpanded = menuBtn.getAttribute("aria-expanded") === "true";
      menuIcon?.classList.toggle("is-active");
      menuBtn.setAttribute("aria-expanded", menuExpanded ? "false" : "true");
      menuBtn.setAttribute(
        "aria-label",
        menuExpanded ? "Open Menu" : "Close Menu"
      );
      menuItems?.classList.toggle("display-none");
    });
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
</script>
