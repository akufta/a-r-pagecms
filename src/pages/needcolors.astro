---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Main from "@layouts/Main.astro";

const pageTitle = "Color Inspiration";
const pageDescription = "A color generator and palette inspiration resource";
---

<Layout title={pageTitle} description={pageDescription} scrollSmooth>
  <Header />
  <Main pageTitle={pageTitle} pageDesc={pageDescription}>
    <div class="needs-colors-page">
      <div class="bmc-wrapper">
        <a
          class="bmc-button"
          target="_blank"
          rel="noreferrer"
          href="https://www.buymeacoffee.com/aky"
        >
          <img
            src="https://www.buymeacoffee.com/assets/img/BMC-btn-logo.svg"
            alt="Buy me a coffee"
          />
          <span>Buy me a coffee</span>
        </a>
      </div>

      <div class="tropicalbox">
        <h3>Looking for tutorials on color theory?</h3>
        <p>I got you covered:</p>
        <figure>
          <a href="https://artres.xyz/shop/" target="_blank" rel="noreferrer">
            <img
              src="https://66.media.tumblr.com/4c38ddbb7e4dcb75400bf3796e0bbb8b/tumblr_inline_pm5tkboax61ralnei_500.jpg"
              alt="Color Theory Primer"
              loading="lazy"
            />
          </a>
        </figure>
        <p>
          Clean, offline PDF of
          <a
            href="https://artres.xyz/post/wonderful-resources-to-master-color-theory/"
            target="_blank"
            rel="noreferrer"
          >
            Wonderful resources to master color theory
          </a>
        </p>
      </div>

      <section class="custom-palettes">
        <h2>Custom Palettes</h2>
        <p>
          I created a few palettes of color combos I like! More are coming soon!
        </p>
        <div class="palette-gallery">
          <figure>
            <img
              src="https://66.media.tumblr.com/64cf25489fa7c9523297b36769f7ec9f/tumblr_pd0p60mXwO1rm7an6o1_500.png"
              alt="Palette"
              loading="lazy"
            />
          </figure>
          <figure>
            <img
              src="https://66.media.tumblr.com/90da10148bcf0d5392748c2c61bb411d/tumblr_osg66uCQfr1rm7an6o1_1280.jpg"
              alt="Palette"
              loading="lazy"
            />
          </figure>
          <figure>
            <img
              src="https://66.media.tumblr.com/b84688fd47a2fad6ee921a9083473ead/tumblr_oqgpf6ecoY1rm7an6o1_1280.jpg"
              alt="Palette"
              loading="lazy"
            />
          </figure>
        </div>
      </section>

      <section class="generator">
        <h2>Random Palette Generator - Colors!</h2>
        <p>
          This tool works well with the
          <a href="https://artres.xyz/ideas" target="_blank" rel="noreferrer"
            >Idea Generator</a
          >
          &
          <a
            href="https://artres.xyz/references"
            target="_blank"
            rel="noreferrer">Visual Reference Boards</a
          >
          tools! Forked from
          <a
            href="https://codepen.io/linuscodes/pen/gJVEXe"
            target="_blank"
            rel="noreferrer">this CodePen</a
          >
          & modified. Mobile support in progress!!
        </p>

        <div class="colorgen">
          <canvas id="canvas" aria-label="Palette preview"></canvas>
          <h1 class="title">Random Palette Generator</h1>
          <label class="rotate-label" for="rotate"
            >Rotate hue (bottom two rows):</label
          >
          <input id="rotate" type="number" value="90" min="15" max="360" />

          <div class="palette">
            <div class="single">
              <div id="color1"></div>
              <div class="hex"></div>
            </div>
            <div class="single">
              <div id="color2"></div>
              <div class="hex"></div>
            </div>
            <div class="single">
              <div id="color3"></div>
              <div class="hex"></div>
            </div>
          </div>

          <div class="palette">
            <div class="single">
              <div id="color4"></div>
              <div class="hex"></div>
            </div>
            <div class="single">
              <div id="color5"></div>
              <div class="hex"></div>
            </div>
            <div class="single">
              <div id="color6"></div>
              <div class="hex"></div>
            </div>
          </div>

          <div class="palette">
            <div class="single">
              <div id="color7"></div>
              <div class="hex"></div>
            </div>
            <div class="single">
              <div id="color8"></div>
              <div class="hex"></div>
            </div>
            <div class="single">
              <div id="color9"></div>
              <div class="hex"></div>
            </div>
          </div>

          <p class="instructions">
            Hit [<kbd class="key">Space</kbd>] or the button below for a new
            palette<br />
            Hit [<kbd class="key">E</kbd>] to toggle the background color
          </p>

          <div class="button-wrapper">
            <button class="pulsebttn" id="myBtn" type="button"
              >Click for more colors!</button
            >
          </div>
        </div>
      </section>
    </div>
  </Main>
  <Footer />
  <script src="/js/colors.js" is:inline></script>
  <style is:inline>
    .needs-colors-page {
      margin: 0 auto;
      padding: clamp(2rem, 3vw, 3rem);
      max-width: 900px;
      font-family: "Source Sans 3", "Source Sans Pro", system-ui, sans-serif;
      color: #0d0d0d;
    }

    .needs-colors-page h1,
    .needs-colors-page h2,
    .needs-colors-page h3 {
      margin-bottom: 0.35rem;
      letter-spacing: 0.02em;
    }

    .needs-colors-page p {
      line-height: 1.6;
      margin-top: 0;
    }

    .bmc-wrapper {
      text-align: center;
      margin-bottom: 2rem;
    }

    .bmc-button {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.35rem 1rem;
      border-radius: 999px;
      border: none;
      background: #0c0c0c;
      color: #fff;
      text-decoration: none;
      font-size: 1rem;
      font-weight: 600;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.25);
    }

    .bmc-button img {
      width: 26px;
    }

    .tropicalbox {
      border: 1px dashed rgba(0, 0, 0, 0.15);
      padding: 1.5rem;
      border-radius: 1px;
      margin-bottom: 2rem;
      background: #f7f6ff;
    }

    .custom-palettes {
      margin-bottom: 2rem;
    }

    .palette-gallery {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(175px, 1fr));
      gap: 1rem;
    }

    .palette-gallery figure {
      margin: 0;
      border: 1px solid rgba(0, 0, 0, 0.08);
      border-radius: 1px;
      overflow: hidden;
      background: #fff;
    }

    .palette-gallery img {
      width: 100%;
      display: block;
      height: auto;
      object-fit: cover;
    }

    .generator {
      margin-bottom: 2rem;
    }

    .colorgen {
      background: #f7f7ff;
      border: 1px solid rgba(128, 118, 255, 0.3);
      padding: 2rem;
      border-radius: 1px;
    }

    .colorgen canvas {
      width: 80px;
      height: 80px;
      display: block;
      margin: 0 auto 1rem;
      border-radius: 1px;
    }

    .colorgen h1 {
      text-align: center;
      margin-top: 0;
    }

    .palette {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
      margin-top: 1.5rem;
    }

    .single {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.35rem;
    }

    .single div {
      width: 100%;
      height: 60px;
      border-radius: 4px;
    }

    .hex {
      font-size: 0.9rem;
      color: #222;
    }

    .instructions {
      text-align: center;
      margin-top: 2rem;
      font-size: 0.9rem;
      color: #5c5877;
    }

    .button-wrapper {
      text-align: center;
      margin-top: 1rem;
    }

    .pulsebttn {
      border: none;
      padding: 0.9rem 2rem;
      border-radius: 999px;
      background: linear-gradient(135deg, #5d47ff, #ff5f9a);
      color: #fff;
      font-weight: 600;
      cursor: pointer;
      transition: transform 200ms ease;
    }

    .pulsebttn:hover,
    .pulsebttn:focus-visible {
      transform: translateY(-2px);
    }
  </style>
</Layout>
